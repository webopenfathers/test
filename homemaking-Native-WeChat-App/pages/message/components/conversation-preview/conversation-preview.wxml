<view class="container">
    <view class="left">
        <i-badge show='{{unreadCount}}' count='{{unreadCount}}'>
            <image class="avatar" src="{{user.avatar?user.avatar:'../../../../images/kt.png'}}"></image>
        </i-badge>
    </view>
    <view class="right">
        <view class="right-top">
            <view class="nickname">{{user.nick?user.nick:'张博闻'}}</view>
            <view class="last-send-time">
                {{_lastMessage.lastTime}}
            </view>
        </view>
        <view class="right-bottom">
            {{_lastMessage.messageForShow}}
        </view>
    </view>
</view>