.container {
    box-sizing: border-box;
    display: flex;
    width: 100%;
    background: #ffffff;
    padding: 30rpx 30rpx;
}

.right {
    box-sizing: border-box;
    width: 100%;
    margin-left: 30rpx;
    border-bottom: 1px solid #efefef;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.right-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
}

.last-send-time{
    color: #888888;
    font-size: 28rpx;
}

.right-bottom{
    width: 570rpx;
    color: #888888;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow:ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
