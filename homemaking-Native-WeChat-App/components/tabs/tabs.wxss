/* components/tabs/tabs.wxss */
.container{
    display: flex;
    flex-direction: column;
    min-height: 100%;
}

.tabs{
    display: flex;
    padding: 30rpx 0;
    background-color: #ffffff;
    height: 126rpx;
    box-sizing: border-box;
    position: sticky;
    top: 0;
    z-index: 999;
}
.tab-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-label{
color: #888888;
white-space: nowrap;
}

.active-tab{
    color: #333333;
    font-weight: bold;
}


.divider{
    margin-top: 10rpx;
    height: 6rpx;
    width: 50rpx;
    background-color: #f3d066;
}

.tab-panel{
    flex: 1;
    margin-top: 30rpx;

}